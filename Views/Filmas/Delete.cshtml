@model Bandomoji_uzduotis.Models.Filmas

@{
    ViewData["Title"] = "Pašalinti";
}

<h1>Pašalinti</h1>

<h3>Ar jūs tikrai norite pašalinti šį filmą?</h3>
<div>
    <h4>Filmas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pavadinimas)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Pavadinimas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsleidimoData)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsleidimoData)
        </dd>
        <dt class = "col-sm-2">
