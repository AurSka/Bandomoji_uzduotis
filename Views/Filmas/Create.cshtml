@model Bandomoji_uzduotis.Models.Filmas

@{
    ViewData["Title"] = "Sukurti";
}

<h1>Sukurti</h1>

<h4>Filmas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pavadinimas" class="control-label"></label>
                <input asp-for="Pavadinimas" class="form-control" />
                <span asp-validation-for="Pavadinimas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsleidimoData" class="control-label"></label>
                <input asp-for="IsleidimoData" class="form-control" />
                <span asp-validation-for="IsleidimoData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FilmoZanras" class="control-label"></label>
                <select asp-for="FilmoZanras" asp-items="@Html.GetEnumSelectList(typeof(Zanras))" class="form-control"></select>
                <span asp-validation-for="FilmoZanras" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sukurti" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Grįžti atgal</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
